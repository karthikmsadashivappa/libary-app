<div class="jumbotron jumbotron-fluid">
  <div class="container">
      <div class="form-group">
        <label for="email">Email Address</label>
        {{input type="email" value=emailAddress class="form-control" placeholder="Please enter your email address"}}
      </div>
      <div class="form-group">
        <label for="textarea">Comments</label>
        {{textarea class="form-control" rows="7" placeholder="Your message. (At least 5 characters.)" value=message}}
      </div>
      <button type="submit" disabled={{isDisabled}} {{action 'saveConformation'}} class="btn btn-primary">Send Message</button>
      <br/><br/>
    {{#if responseMessage}}
      <div class="alert alert-success">
        {{responseMessage}}
      </div>
      {{/if}}
  </div>
</div>
